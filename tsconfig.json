{
	"compilerOptions": {
		"target": "ES5",
		"module": "commonjs",
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"jsx": "react",
		"sourceMap": true,
		"outDir": "ts-build",
		"removeComments": true,
		"strict": true,
		"baseUrl": "src",
		"lib":["dom","es2017"],
		"allowSyntheticDefaultImports": true
	},
	"exclude": ["node_modules"]
}